<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAF0F8"
    tools:context=".TambahData">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardjudulinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00B4D8"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/judulinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00B4D8"
            android:padding="10dp"
            android:text="Entry Data Barang"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A3C7D6"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardinputkode"
        android:layout_below="@id/cardjudulinput"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/inputkode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Kode Barang"
            android:padding="5dp"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#A3C7D6"
            android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A3C7D6"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardinputnama"
        android:layout_below="@id/cardinputkode"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/inputnama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A3C7D6"
            android:hint="Nama Barang"
            android:padding="5dp"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A3C7D6"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardinputsatuan"
        android:layout_below="@id/cardinputnama"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/inputsatuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Satuan Barang"
            android:padding="5dp"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#A3C7D6"
            android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A3C7D6"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardinputjumlah"
        android:layout_below="@id/cardinputsatuan"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/inputjmlstok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Stok Barang"
            android:padding="5dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#A3C7D6"
            android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A3C7D6"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardinputharga"
        android:layout_below="@id/cardinputjumlah"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/inputharga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A3C7D6"
            android:hint="Harga Barang"
            android:padding="5dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2B3467"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardtmblsave"
        android:layout_below="@id/cardinputharga"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/tmblsave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SAVE"
            android:outlineSpotShadowColor="#2B3467"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="#2B3467"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF731D"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardtmblexit"
        android:layout_below="@id/cardtmblsave"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/tmblexit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EXIT"
            android:outlineSpotShadowColor="#FF731D"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="#FF731D"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>